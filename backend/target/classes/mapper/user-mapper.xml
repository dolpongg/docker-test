<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.myhome.model.repo.UserDAO">
   
   <select id="login" parameterType="user" resultType="user">
		select name, id, email
		from user
		where id = #{id} and pass = #{pass}
	</select>
	
	<select id="userInfo" parameterType="string" resultType="user">
		select *
		from user
		where id = #{id}
	</select> 
   
    <select id="getRefreshToken" parameterType="string" resultType="string">
		select token
		from user
		where id = #{id}
	</select>
	
	<update id="saveRefreshToken" parameterType="map">
		update user
		set token = #{token}
		where id = #{id}
	</update>
	
	<update id="deleteRefreshToken" parameterType="map">
		update user
		set token = #{token, jdbcType=VARCHAR}
		where id = #{id}
	</update>
	
	<!-- int insert(User user) throws SQLException; -->
    <insert id="insert" parameterType="user">
        insert into user (`id`, `pass`, `name`, `email`, `type`, `address`,`lat`,`lng`) values (#{id}, #{pass}, #{name}, #{email}, #{type}, #{address}, #{lat}, #{lng})
    </insert>
    
    <!-- int update(User user) throws SQLException; -->
    <update id="update" parameterType="user">
        update user set pass=#{pass}, name=#{name}, email=#{email}, type=#{type}, address=#{address} where id=#{id}
    </update>
    
    <!-- int delete(String id) throws SQLException; -->
    <delete id="delete" parameterType="String">
        delete from user where id = #{id}
    </delete>


</mapper>