<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.myhome.model.repo.InterestDAO">

    <!-- String select(String sido, String gugun, String dong) throws SQLException; -->
    <select id="select" resultType="String" parameterType="map">
        select * from dongcode where sidoName=#{sido} and gugunName = #{gugun} and dongName=#{dong}
    </select>
    
     <!-- List<Local> localList(String id) throws SQLException; -->
     <select id="localList" resultType="local" parameterType="String">
         select * from dongcode where dongCode in (select dongCode from interest where id = #{id})
     </select>
    
    <!-- int insert(String dongCode, String id) throws SQLException; -->
    <insert id="insert" parameterType="map">
        insert into interest values (#{id}, #{dongCode})
    </insert>
    
    <!-- int delete(String id, String dongCode) throws SQLException; -->
    <delete id="delete" parameterType="map">
        delete from interest where id = #{id} and dongCode = #{dongCode}
    </delete>

</mapper>